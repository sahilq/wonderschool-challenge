{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "rules": {
    "semicolon": false
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
